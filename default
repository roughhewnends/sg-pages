  <script>
    // Cursor-tracked aurora hotspot
    // Updates CSS variables --mx/--my on the hovered panel only.
    (function () {
      const panels = Array.from(document.querySelectorAll(".panel"));
      const reduceMotion = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      if (reduceMotion) return;

      function setPos(panel, clientX, clientY) {
        const r = panel.getBoundingClientRect();
        const x = Math.max(0, Math.min(1, (clientX - r.left) / r.width));
        const y = Math.max(0, Math.min(1, (clientY - r.top) / r.height));
        panel.style.setProperty("--mx", (x * 50).toFixed(2) + "%");
        panel.style.setProperty("--my", (y * 50).toFixed(2) + "%");
      }

      panels.forEach(panel => {
        panel.addEventListener("mousemove", (e) => setPos(panel, e.clientX, e.clientY));
        panel.addEventListener("mouseenter", (e) => setPos(panel, e.clientX, e.clientY));
        // For keyboard: center hotspot on focus if we don't have a cursor
        panel.addEventListener("focus", () => {
          panel.style.setProperty("--mx", "30%");
          panel.style.setProperty("--my", "27%");
        });
      });
    })();
  </script>
</body>
